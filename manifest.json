{
  "manifest_version": 2,

  "name": "Hacker News Karma Details",
  "version": "0.3",
  "description": "Show Hacker News karma details in user info.",
  "icons": { "16": "icons/icon.png",
             "48": "icons/icon-48.png",
            "128": "icons/icon-128.png" },
  "default_locale": "en",

  "permissions": [
    "https://hn.algolia.com/*"
  ],

  "content_security_policy": "script-src 'self' https://hn.algolia.com; object-src 'none'",

  "background": {
      "scripts": ["background.js"]
    },

  "content_scripts": [
    {
      "matches": ["https://news.ycombinator.com/user*"],
      "js": ["lib/jquery.min.js", "src/contentScript.js"]
    }
  ]
}